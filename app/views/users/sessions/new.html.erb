<div class="row">

  <div class="col s6 offset-s3">
    <h5>Log In</h5>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),  class: "col s12" ) do |f| %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
      </div>
    </div>

    <!-- <div class="input-field">
    <%# f.label 'Log in As:' %><br />
    <%# select_tag :user_type, options_for_select([['Crafter', 'crafter'], ['Craftee', 'craftee']]) %>
  </div> -->
  <div class="row">
    <% if devise_mapping.rememberable? -%>
    <!-- <div class="field"> -->
    <p class= 'col s12'>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      <!-- </div> -->
    </p>
    <% end -%>
  </div>

  <div class="row">
      <%= f.submit "Log In", :class => 'waves-effect waves-light btn btn-medium white black-text' %>
  </div>
  <%= render "users/shared/links" %>
  <% end %>

</div>

</div>
