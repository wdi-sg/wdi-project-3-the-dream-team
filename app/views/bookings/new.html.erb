    <div class="section">
      <h1>Confirm Your Booking</h1>
      <div class="row">
        <div class="col s6">
            <div class="card horizontal">
              <div class="card-image">
                <img src="http://lorempixel.com/100/190/nature/6">
              </div>
              <div class="card-stacked">
                <div class="card-content">
                  <p><%= @session.datetime_from %></p>
                  <!-- dont delete the id=session_price -->
                  <p>$ <span id="session_price"><%= @session.price %></span></p>
                </div>
                <div class="card-action">
                  <%= link_to @event.name, event_path(@event) %>
                </div>
              </div>
            </div>

        </div>
        <div class="col s6">
          <%= form_for ([:event, @new_booking]) do |f| %>

          <div class="input-field">
            <%= f.label :session_id, class: 'active' %>
            <%= f.number_field :session_id, value: @session.id, disabled: true %>
          </div>

          <div class="input-field">
            <%= f.label :pax, class: 'active' %>
            <%= f.select :pax, class: 'hi' do %>
            <% (1..(@session.capacity - @session.pax)).to_a.each do |c| -%>
            <%= content_tag(:option, c, value: c) %>
            <% end %>
            <% end %>
          </div>

          <%= hidden_field(:session, :id) %>

          <div class="input-field">
            <div class="row">
              <div class="col s6">
                <p>Total: $<span id="booking_amount"></span></p>
              </div>
              <div class="col s6">
                <%= f.submit 'Confirm', class: 'waves-effect waves-green btn'%>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>


    </div>
