<div class="col s4">
  <div class="card small">
    <div class="card-image waves-effect waves-block waves-light">
      <% if !event.image_link || event.image_link == ''  %>
        <img src="<%= asset_path('default_event.png') %>" alt="Image" class="activator" width="313" height="235">
      <% else %>
        <%= cl_image_tag(event.image_link) %>
      <% end %>

    </div>
    <div class="card-content">
      <div class="row">
        <a href="<%= event_path(event)%>" style = 'font-size: 1.2em; '><%= event.name %></a>
        <i class = "material-icons right card-title activator"> more_vert </i>
      </div>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">More Info<i class="material-icons right">close</i></span>
      <div class="divider"></div>
      <table>
        <tbody>
          <tr>
            <td>Description:</td>
            <td><%= event.description %></td>
          </tr>
          <tr>
            <td>Crafter:</td>
            <td><%= event.crafter.name %></td>
          </tr>
        </table>
        <div class="divider"></div>
        <table>
          <tr>
            <p style='text-decoration: underline'>Upcoming Sessions:</p>
          </tr>
          <% if event.sessions.length > 0 %>
            <% event.sessions.each do |session| %>
            <tr>
              <li><%=session.datetime_from.to_formatted_s(:rfc822)%></li>
            </tr>
            <% end %>
          <% else %>
            <p style = 'font-style: italic'>Sorry there are no upcoming sessions for this event</p>
          <% end %>
        </table>
      </tbody>
    </table>
  </div>
</div>
</div>
