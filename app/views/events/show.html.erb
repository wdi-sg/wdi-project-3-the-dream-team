<section>
  <div class="container">
    <!-- craftee accessible section -->
    <div class="section">
      <div class="row">
        <!-- left column -->
        <div class="col s6">
          <h2><%= @event.name %></h2>
          <p><%= @event.description %></p>
          <p>by: <%= @event.crafter.name %> with crafter id <%= @event.crafter.id %></p>
        </div>

        <!-- right column -->
        <div class="col s6">
          <% @event.sessions.each do |sess| %>
          <div class="col s12 m6">
            <div class="card darken-1">
              <div class="card-content">
                <span class="card-title"><%= sess.datetime_from %></span>
                <p>$ <%= sess.price %></p>
              </div>
              <div class="card-action">
                <%= link_to "Join!", book_event_session_path(@event.id, sess.id), class: "waves-effect waves-light blue-grey darken-4 btn pulse" %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- end -->
    <div class="divider"></div>

    <!-- crafter accesible section -->
    <p>There is an edit button here if you're the crafter of this event</p>


    <div class="section">
      <% if my_event?(@event) %>
      <a class="modal-trigger waves-effect waves-light btn" href="#modal1">Update Event Button</a>

      <div id="modal1" class="modal modal-fixed-footer">
        <%= form_for @event, class: "col s12" do |f| %>
        <div class="modal-content">
          <h4>Update <%= @event.name %></h4>

            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name %>
                <%= f.label :name, class: 'active' %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_area :description, class: "materialize-textarea" %>
                <%= f.label :description, class: 'active' %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.number_field :category_id, class: "validate" %>
                <%= f.label :category_id, class: 'active' %>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Confirm Button", class: "modal-action modal-close waves-effect waves-green btn-flat" %>
        </div>
        <% end %>
      </div>









      <% end %>

    </div>

  </div>

</section>
