<div class="section">
  <!-- favourite event function here -->
  <div class="">
    <%  if my_fav_event?(@event) == true
          @heart = 'Unfavourite!'
        elsif my_fav_event?(@event) == false
          @heart = 'Favourite!'
        end
    %>
    <%= link_to @heart, craftee_fav_event_path(current_craftee.id),
          data: {
            remote: true,
            method: :post,
            params: {
              craftee_id: current_craftee.id,
              event_id: @event.id
            }.to_param,
           },
          class: "favourite" %>
  </div>
  <!-- end -->
  <%= render 'events/eventdetails' %>
</div>

<div class="divider"></div>
<div class="section">
    <% if my_event? @event %>
      <p>display crafter only view</p>
      <%= render 'events/craftershow' %>
    <% else %>
      <p>display craftee view</p>
      <%= render 'events/crafteeshow' %>
    <% end %>
</div>
