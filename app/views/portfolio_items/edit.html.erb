

<%# Secondary Navigation bar %>
<%= render 'partials/second_nav' %>

<div class="container">

  <%= form_for :portfolio_item, url: crafter_portfolio_item_path, method: :put do |f| %>

  <div class="row">
    <div class="input-field col s12">
      <%= f.text_area :description, class: "materialize-textarea" %>
      <%= f.label :description %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.select :item_type, ['Photo', 'Video'] %>
      <%= f.label :item_type %>
    </div>
  </div>

  <%# start input %>

  <div class="row">
    <div class="file-field input-field col s12">
      <div class="waves-effect waves-light btn white black-text">
        <span>Upload File</span>
        <%= f.file_field :media_link %>
        <!-- <input type="file"> -->
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>
  </div>




  <%# end input %>

  <div class="row">
    <div class="input-field col s12">
      <%= f.submit "Update", class: "waves-effect waves-light btn" %>
    </div>
  </div>

  <% end %>
</div>
