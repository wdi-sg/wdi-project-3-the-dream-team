<%= form_for ([@crafter, @crafter.portfolio_items.build]) do |f| %>

<div class="row">
  <div class="input-field col s12">
    <%= f.file_field :media_link %>
  </div>
</div>

<div class="row">
  <div class="file-field input-field col s12">
    <div class="waves-effect waves-light btn white black-text">
      <span>Upload File</span>
      <input type="file">
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
    </div>
    <%= f.file_field :media_link %>
  </div>
</div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.text_area :description, class: "materialize-textarea" %>
      <%= f.label :description %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.select :item_type, ['Photo', 'Video'] %>
      <%= f.label :item_type %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.submit "Create", class: "waves-effect waves-light btn white black-text" %>
    </div>
  </div>

<% end %>
