<div class="container">
  <div class="hero-body">
    <h1 class="title">
      <%= @crafter.name %>
    </h1>
    <h2 class="subtitle">
      <%= @crafter.biography %>
    </h2>
    <%= link_to "Edit", edit_crafter_path, class: "button is-black" %>
    <%= link_to 'Delete', crafter_path(@crafter, authenticity_token: form_authenticity_token),
    class: 'button is-danger',
      method: :delete %>
    </div>
    <div class="row">
      <div class="col s12">
        <% @portfolio_items.each do |portfolio_item| %>
        <div class="col s4">
          <div class="card small">
            <div class="card-image waves-effect waves-block waves-light">
              <img src="<%= portfolio_item.media_link %>" alt="Image" class='activator'></td>
            </div>
            <div class="card-content">
              <a class="waves-effect waves-light btn" href="#modal<%= portfolio_item.id %>">View Description</a>
                  <div id="modal<%= portfolio_item.id %>" class="modal">
                    <div class="modal-content">
                      <h4>Description</h4>
                        <%= render 'crafters/showDescrip', thePortfolio: portfolio_item %>
                    </div>
                    <div class="modal-footer">
                    </div>
                  </div>
              <span class="card-title activator grey-text text-darken-4"><i class="material-icons right">more_vert</i></span>
              <p><a href="#">This is a link</a></p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
              <table>
                <tbody>
                </table>
                <%= link_to "Edit Description", edit_crafter_portfolio_item_path(@crafter, portfolio_item), class: "btn is-black" %>
                <%= link_to "Delete", crafter_portfolio_item_path(@crafter.id, portfolio_item.id), method: :delete, class: "btn is-black" %>

              </tbody>
            </table>

          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


<pre>
  <%= @crafter.inspect %>
</pre>
