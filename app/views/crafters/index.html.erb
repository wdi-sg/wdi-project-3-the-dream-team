<div class="row">
  <%= image_tag ('homepage_quote1.png'), :class => 'materialboxed', :style=> 'width:30%; align-item: center; margin: auto; margin-top: 5%;' %>
  <!-- <img class="materialboxed" width="650" src="/owl1.jpg"> -->
</div>

<%# Secondary Navigation bar %>
<%= render 'partials/second_nav' %>

<div class="container" id = "all-crafters-container">
  <%# link_to "New Crafter", new_crafter_path, class: "button is-primary" %>
  <div class="row">
    <div class="col s12 cards-container">
      <% @all_crafters.each do |crafter| %>
      <div class="col s4">
        <div class="card small">
          <div class="card-image waves-effect waves-block waves-light">
            <img src="<%= crafter.profilePic_link %>" alt="Image" class='activator'></td>
          </div>

          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><%= crafter.name %><i class="material-icons right">more_vert</i></span>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">Crafter Details<i class="material-icons right">close</i></span>
            <!-- <p>why can't i put a table here???</p> -->
            <div class="divider"></div>
            <table>
              <tbody>
                <tr>
                  <td>Crafter:</td>
                  <td><%= crafter.name %></td>
                </tr>
                <tr>
                  <td>Blurb:</td>
                  <td><%= crafter.biography %></td>
                </tr>
              </table>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
