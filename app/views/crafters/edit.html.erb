<div class='container'>
  <h4>Edit Profile</h4>
  <%= form_for @crafter do |f| %>

  <%# start input %>
  <div class="row">
    <div class="input-field col s12">
      <%= f.text_field :name %>
      <%= f.label :name %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.text_area :biography, class: 'materialize-textarea' %>
      <%= f.label :biography %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.text_field :profession %>
      <%= f.label :profession %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.text_field :category_id %>
      <%= f.label :category_id %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.telephone_field :contact_number %>
      <%= f.label :contact_number %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.email_field :contact_email, class: 'validate' %>
      <%= f.label :contact_email %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.url_field :facebook_link, class: 'validate' %>
      <%= f.label :facebook_link %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.url_field :twitter_link, class: 'validate' %>
      <%= f.label :twitter_link %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.url_field :website_link, class: 'validate' %>
      <%= f.label :website_link %>
    </div>
  </div>
  <div class="row">
    <div class="file-field input-field col s12">
      <div class="btn">
        <span>Upload Profile Picture</span>
        <input type="file">
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
      <%= f.file_field :profilePic_link %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.submit 'Confirm', class: 'waves-effect waves-light btn'%>
    </div>
  </div>
  <% end %>

</div>
